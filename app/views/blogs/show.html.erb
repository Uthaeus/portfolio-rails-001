
<div class='blog-show-container'>
  <div class='show-container-left'>
    <div class='show-header'>
      <h1 class='show-title'><%= @blog.title %></h1>
    </div>

    <div class='show-widget'>
      <div class='show-widget-left'>
        <%= link_to "<< Back to blogs", blogs_path %> /
        <p>Topic Link</p> /
        <p>Created <%= distance_of_time_in_words(@blog.created_at, Time.now) %> ago</p> 
      </div>

      <div class='show-widget-right'>
        <% if logged_in?(:site_admin) %>
          <%= link_to "Edit this blog", edit_blog_path(@blog) %> |
          <%= button_to "Destroy this blog", @blog, method: :delete %>
        <% end %>
      </div>
    </div>

    <div class='show-content'>
      <p class='show-body'><%= @blog.body %></p>

        <%# comments %>
    </div>
  </div>

  <div class='show-container-right'>
    <%# sidebar %>
  </div>
</div>
